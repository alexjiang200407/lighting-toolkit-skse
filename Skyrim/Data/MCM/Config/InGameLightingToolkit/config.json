{
  "$schema": "https://raw.githubusercontent.com/Exit-9B/MCM-Helper/main/docs/config.schema.json",
  "modName": "Lighting Toolkit",
  "displayName": "$Title_Menu_Name",
  "minMcmVersion": 13,
  "pluginRequirements": [ "InGameLightingToolkit.esp" ],
  "cursorFillMode": "topToBottom",
  "content": [
    {
      "text": "$Control_Config_Header",
      "type": "header"
    },
    {
      "id": "iOpenCloseMenuKey:Controls",
      "text": "$Open_Close_Menu_Key",
      "type": "keymap",
      "ignoreConflicts": false,
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "iPositionLightKey:Controls",
      "text": "$Position_Light_Key",
      "type": "keymap",
      "ignoreConflicts": true,
      "valueOptions": {
        "sourceType": "ModSettingInt",
        "min": 0,
        "max": 255
      }
    },
    {
      "id": "iLookAroundKey:Controls",
      "text": "$Look_Around_Key",
      "type": "keymap",
      "ignoreConflicts": true,
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "iRotateLeftKey:Controls",
      "text": "$Rotate_Left_Key",
      "type": "keymap",
      "ignoreConflicts": true,
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "iRotateRightKey:Controls",
      "text": "$Rotate_Right_Key",
      "type": "keymap",
      "ignoreConflicts": true,
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    },
    {
      "id": "iHideKey:Controls",
      "text": "$Hide_Key",
      "type": "keymap",
      "ignoreConflicts": true,
      "valueOptions": {
        "sourceType": "ModSettingInt"
      }
    }
  ]
}
